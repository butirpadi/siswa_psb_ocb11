<odoo>
    <data>
        <record id="view_registrasi_filter" model="ir.ui.view">
            <field name="name">registrasi.list.select</field>
            <field name="model">siswa_psb_ocb11.calon_siswa</field>
            <field name="arch" type="xml">
                <search string="Search Siswa">
                    <field name="name" string="Nama" filter_domain="['|','|','|',
                                                                        ('name','ilike',self),
                                                                        ('panggilan','ilike',self),
                                                                        ('ayah','ilike',self),
                                                                        ('ibu','ilike',self),
                                                                        ]"/>
                    <group expand="0" string="Group By">
                        <filter name="group_tahunajaran_id" string="Tahun Ajaran" domain="[]" context="{'group_by':'tahunajaran_id'}"/>
                        <filter name="group_jenjang" string="Jenjang" domain="[]" context="{'group_by':'jenjang_id'}"/>
                        <filter name="group_jenis_kelamin" string="Jenis Kelamin" domain="[]" context="{'group_by':'jenis_kelamin'}"/>
                        <filter name="group_state" string="Status" context="{'group_by':'state'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record id="view_form_registrasi" model="ir.ui.view">
            <field name="name">calon.psb.ocb11.form</field>
            <field name="model">siswa_psb_ocb11.calon_siswa</field>
            <field name="arch" type="xml">
                <form duplicate="0" string="Registrasi" class="o_sale_order"  >
                    <header>
                        <button name="action_confirm" type="object" string="Confirm" attrs="{'invisible':['|',('state', '=', 'reg'),('reg_number', '=', 'New')]}" class="btn btn-primary" />
                        <button name="action_print_kwitansi" type="object" string="Print" attrs="{'invisible':['|',('state', '=', 'draft'),('reg_number', '=', 'New')]}" class="btn" />
                        <button name="action_reset" type="object" string="Reset" attrs="{'invisible':[('state', '!=', 'reg')]}" class="btn btn-danger" confirm="Are you sure to do this action?" groups="siswa_psb_ocb11.siswa_psb_group_admin" />
                        <field name="state" widget="statusbar" statusbar_visible="draft,reg"/>
                    </header>
                    <sheet >
                        <div class="oe_title">
                            <h1>
                                <field name="reg_number" readonly="1"/>
                            </h1>
                        </div>
                        <notebook>
                            <page name="page_bioadata" string="Biodata"  >
                                <group string="Biodata Siswa"  >
                                    <group  >
                                        <field name="tahunajaran_id" 
                                            attrs="{'readonly':[('state', '=', 'reg')] }"
                                            options="{'no_create':True,'no_edit':True,'no_create_edit': True,'no_open':True}" 
                                            context="{'active_test': False}" required="1" />
                                        <field name="tanggal_registrasi" attrs="{'readonly':[('state', '=', 'reg')] }" />
                                        <!-- <field name="formulir_id" options="{'no_create':True,'no_edit':True,'no_create_edit': True,'no_open':True}" /> -->
                                        <field name="is_siswa_lama" attrs="{'readonly':[('state', '=', 'reg')] }" />
                                        <field name="siswa_id" 
                                            attrs="{'invisible':[('is_siswa_lama', '=', False)], 'required':[('is_siswa_lama','=',True)], 'readonly':[('state', '=', 'reg')] }" 
                                            options="{'no_create':True,'no_edit':True,'no_create_edit': True,'no_open':True}" />
                                        <field name="name" 
                                            attrs="{'invisible':[('is_siswa_lama', '=', True)], 'readonly':[('state', '=', 'reg')] }" />
                                        <!-- <field name="formulir_tahunajaran_id"/> -->
                                        <field name="jenjang_id" 
                                            attrs="{'readonly':[('state', '=', 'reg')] }" 
                                            options="{'no_create':True,'no_edit':True,'no_create_edit': True,'no_open':True}" />
                                        <field name="panggilan" attrs="{'readonly':[('state', '=', 'reg')] }" />
                                        <field name="jenis_kelamin" attrs="{'readonly':[('state', '=', 'reg')] }" />
                                        <field name="tempat_lahir" attrs="{'readonly':[('state', '=', 'reg')] }" />
                                        <field name="tanggal_lahir" attrs="{'readonly':[('state', '=', 'reg')] }" />
                                        <field name="nis" attrs="{'readonly':[('state', '=', 'reg')] }" />
                                        <!-- <field name="tahunajaran_id" options="{'no_create':True,'no_edit':True,'no_create_edit': True,'no_open':True}" context="{'active_test': False}" invisible="1" /> -->
                                    </group>
                                    <group>
                                        <field name="anak_ke" attrs="{'readonly':[('state', '=', 'reg')] }" />
                                        <field name="dari_bersaudara" attrs="{'readonly':[('state', '=', 'reg')] }" />
                                        <label for="street" string="Alamat" attrs="{'readonly':[('state', '=', 'reg')] }" />
                                        <div class="o_address_format">
                                            <field name="street" placeholder="Street..." class="o_address_street" attrs="{'readonly':[('state', '=', 'reg')] }" />
                                            <field name="street2" placeholder="Street 2..." class="o_address_street" attrs="{'readonly':[('state', '=', 'reg')] }" />
                                            <field name="city" placeholder="City" class="o_address_city" attrs="{'readonly':[('state', '=', 'reg')] }" />
                                            <field name="state_id" class="o_address_state" placeholder="State" options="{&quot;no_open&quot;: True}"  context="{'country_id': country_id, 'zip': zip}" attrs="{'readonly':[('state', '=', 'reg')] }" />
                                            <field name="zip" placeholder="ZIP" class="o_address_zip" attrs="{'readonly':[('state', '=', 'reg')] }" />
                                            <field name="country_id" placeholder="Country" class="o_address_country" options="{&quot;no_open&quot;: True, &quot;no_create&quot;: True}" attrs="{'readonly':[('state', '=', 'reg')] }" />
                                        </div>
                                        <field name="phone" attrs="{'readonly':[('state', '=', 'reg')] }" />
                                        <field name="mobile" attrs="{'readonly':[('state', '=', 'reg')] }" />
                                    </group>
                                </group>
                            </page>
                            <page name="page_orangtua" string="Orang Tua/Wali" >
                                <group string="Orang Tua/Wali" >
                                    <group  >
                                        <field name="ayah" attrs="{'readonly':[('state', '=', 'reg')] }" />
                                        <field name="pekerjaan_ayah_id" string="Pekerjaan" options="{'no_create':True,'no_edit':True,'no_create_edit': True,'no_open':True}" attrs="{'readonly':[('state', '=', 'reg')] }" />
                                        <field name="telp_ayah" string="Phone" attrs="{'readonly':[('state', '=', 'reg')] }" />
                                    </group>
                                    <group>
                                        <field name="ibu" attrs="{'readonly':[('state', '=', 'reg')] }" />
                                        <field name="pekerjaan_ibu_id" string="Pekerjaan" options="{'no_create':True,'no_edit':True,'no_create_edit': True,'no_open':True}" attrs="{'readonly':[('state', '=', 'reg')] }" />
                                        <field name="telp_ibu" string="Phone" attrs="{'readonly':[('state', '=', 'reg')] }" />
                                    </group>
                                </group>
                            </page>
                            <page name="page_pembayaran" string="Pembayaran" >
                                <group attrs="{'invisible':[('state', '=', 'reg')]}" >
                                    <group>
                                        <button name="generate_pembayaran_default" string="Generate Pembayaran" type="object" class="oe_edit_only" />
                                    </group>
                                    <group>
                                        <field name="biaya_optional_ids" widget="many2many_tags" 
                                            options="{'no_create_edit': True,'no_open':True,'no_create':True,'no_edit':True}"
                                            domain="[('is_optional','=',True)]"  />
                                        <label for="generate_biaya_optional" string="" />
                                        <button name="generate_biaya_optional" string="Add" type="object" class="oe_edit_only" />
                                    </group>
                                </group>

                                <field name="payment_lines" options='{"no_create": True}' attrs="{'readonly':[('state', '=', 'reg')] }" >
                                    <tree editable="bottom" create="false" delete="false" >
                                        <field name="calon_siswa_id" invisible="1" />
                                        <field name="biaya_id" options='{"no_create": False, "no_edit": True, "no_create_edit": True, "no_open": True}' />
                                        <field name="is_bulanan" invisible="1" />
                                        <field name="bulan" attrs="{'readonly':[('is_bulanan', '=', False)], 'required':[('is_bulanan', '=', True)]}" />
                                        <field name="harga" sum="Total Harga" />
                                        <field name="dibayar" sum="Total Bayar" />
                                    </tree>
                                </field>

                                <group class="oe_subtotal_footer oe_right" colspan="2" name="total_bayar">
                                    <field name="bayar_tunai" widget='monetary' attrs="{'readonly':[('state', '=', 'reg')] }" />
                                    <label for="calculate_bayar_tunai" string="" invisible="1" />
                                    <button name="calculate_bayar_tunai" string="Calculate Bayar Tunai" type="object" class="btn btn-success oe_edit_only" attrs="{'invisible':[('state', '=', 'reg')] }" />
                                </group>
                            </page>
                        </notebook>
                        
                    </sheet>
                </form>
            </field>
        </record>

        <!-- explicit list view definition -->    
        <record model="ir.ui.view" id="registrasi_form_list">
            <field name="name">registrasi.form.list</field>
            <field name="model">siswa_psb_ocb11.calon_siswa</field>
            <field name="arch" type="xml">
                <tree  >
                    <field name="tahunajaran_id" string="Tahun Ajaran" />
                    <field name="reg_number" />
                    <field name="jenjang_id" />
                    <field name="tanggal_registrasi" />
                    <field name="name" />
                    <field name="jenis_kelamin" />
                    <field name="tanggal_lahir" />
                    <field name="state" />
                </tree>
            </field>
        </record>

        <record model="ir.actions.act_window" id="siswa_psb_ocb11.registrasi_action_window">
            <field name="name">Registrasi</field>
            <field name="res_model">siswa_psb_ocb11.calon_siswa</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{
                'search_default_group_tahunajaran_id':1,
                'search_default_group_jenjang':1,
                'search_default_group_state':1
            }</field>
            <!-- <field name="search_view_id" ref="view_registrasi_filter"/> -->
            <!-- <field name="form_view_id" ref="siswa_psb_ocb11.view_form_registrasi"/> -->
            <!-- <field name="view_id" ref="siswa_psb_ocb11.registrasi_form_list"/> -->
            <!-- <field name="tree_view_id" ref="siswa_psb_ocb11.registrasi_form_list"/> -->
        </record>
    </data>
</odoo>